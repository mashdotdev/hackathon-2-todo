# Database - Neon PostgreSQL connection string
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# Security - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-min-32-chars-change-in-production

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Frontend URL for local development
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development

# Phase III: AI Chatbot - Gemini API Key
# Get your API key from: https://aistudio.google.com/apikey
# NOTE: Free tier has rate limits (~15 requests/minute, ~1500/day)
# For production, upgrade to paid tier or use a different provider
GEMINI_API_KEY=your-gemini-api-key

# Optional: Override the default Gemini model
# Available models (via LiteLLM):
#   - gemini/gemini-2.0-flash (default, fast)
#   - gemini/gemini-1.5-flash (older, may have different quotas)
#   - gemini/gemini-1.5-pro (more capable, may have different quotas)
# GEMINI_MODEL=gemini/gemini-2.0-flash
